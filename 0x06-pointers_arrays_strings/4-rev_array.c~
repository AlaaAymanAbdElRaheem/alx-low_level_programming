#include "main.h"

/**
 * reverse_array - reverse the array content
 * @a: the array
 * @n: number of elemnts of the array
 * Return: void
 */

void reverse_array(int *a, int n)
{
	int i, half, num;
	int len = 0;

	for (i = 0; i < n; i++)
		len++;
	half = len / 2;
	i = 0;

	while (half--)
	{
		num = a[len - i - 1];
		a[len - i - 1] = a[i];
		a[i] = num;
		i++
	}
}
